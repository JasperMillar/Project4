<Window x:Class="project4.editpizza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project4"
        mc:Ignorable="d"
        Title="editpizza" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <TextBlock Width="80" Text="ID:"/>
                <TextBlock x:Name="tbId"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="80" Text="pizzasoort:"/>
                <TextBox x:Name="tbpizzasoort"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="80" Text="toppings:"/>
                <TextBox x:Name="tbtoppings"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="80" Text="prijs:"/>
                <TextBox x:Name="tbprijs"/>
            </DockPanel>
            <Button Content="Wijzig" Click="Update_Click"/>
        </StackPanel>
    </Grid>
</Window>
